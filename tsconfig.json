{
  "compilerOptions": {
    "module": "es2020",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "typeRoots": ["./src/global.d.ts"],
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "script"]
}
